<!-- sections/multicolumn-custom.liquid -->
<div class="multicolumn-custom-section">
    <div class="page-width">
      <div class="grid grid--1-col grid--{{ section.settings.columns }}-col">
        {% for block in section.blocks %}
          <div class="grid__item" style="border-top: 1px solid #E4E3E3;padding-top: 10px;">
            <div class="multicolumn-item">
              <h3 style="margin: 4px 0;">{{ block.settings.heading }}</h3>
              <p style="margin: 4px 0;">{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
  {% schema %}
  {
    "name": "Multicolumn Custom",
    "settings": [
      {
        "type": "select",
        "id": "columns",
        "label": "Number of Columns",
        "options": [
          { "value": "2", "label": "2 Columns" },
          { "value": "3", "label": "3 Columns" },
          { "value": "4", "label": "4 Columns" }
        ],
        "default": "4"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Column Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Description of the column goes here."
          }
        ]
      }
    ],
    "max_blocks": 6,
    "presets": [
      {
        "name": "Multicolumn Custom",
        "blocks": [
          { "type": "column" },
          { "type": "column" },
          { "type": "column" }
        ]
      }
    ]
  }
  {% endschema %}
  