<div class="category-grid page-width">
  <h2 class="category-grid__heading">{{ section.settings.heading }}</h2>
  <div class="category-grid__container">
    <div class="category-first">
        <div class="category-first-row">
            <a href="{{ section.settings.link_1 }}" class="category-grid__item item-1" style="background-image: url('{{ section.settings.image_1 | img_url: '800x' }}')">
                <span class="category-grid__title">{{ section.settings.title_1 }}</span>
                <span class="category-grid__icon">↗</span>
            </a>
        
            <a href="{{ section.settings.link_2 }}" class="category-grid__item item-2" style="background-image: url('{{ section.settings.image_2 | img_url: '800x' }}')">
                <span class="category-grid__title">{{ section.settings.title_2 }}</span>
                <span class="category-grid__icon">↗</span>
            </a>
        </div>
        <div class="category-first-column">
            <a href="{{ section.settings.link_3 }}" class="category-grid__item item-3" style="background-image: url('{{ section.settings.image_3 | img_url: '800x' }}')">
                <span class="category-grid__title">{{ section.settings.title_3 }}</span>
                <span class="category-grid__icon">↗</span>
            </a>
    
            <a href="{{ section.settings.link_4 }}" class="category-grid__item item-4" style="background-image: url('{{ section.settings.image_4 | img_url: '800x' }}')">
                <span class="category-grid__title">{{ section.settings.title_4 }}</span>
                <span class="category-grid__icon">↗</span>
            </a>
        </div>
    </div>

    <div class="category-second">
        <a href="{{ section.settings.link_5 }}" class="category-grid__item item-5" style="background-image: url('{{ section.settings.image_5 | img_url: '800x' }}')">
            <span class="category-grid__title">{{ section.settings.title_5 }}</span>
            <span class="category-grid__icon">↗</span>
        </a>

        <a href="{{ section.settings.link_6 }}" class="category-grid__item item-6" style="background-image: url('{{ section.settings.image_6 | img_url: '800x' }}')">
            <span class="category-grid__title">{{ section.settings.title_6 }}</span>
            <span class="category-grid__icon">↗</span>
        </a>

        <a href="{{ section.settings.link_7 }}" class="category-grid__item item-7" style="background-image: url('{{ section.settings.image_7 | img_url: '800x' }}')">
            <span class="category-grid__title">{{ section.settings.title_7 }}</span>
            <span class="category-grid__icon">↗</span>
        </a>
    </div>
  </div>
</div>

<style>
.category-grid__heading {
  text-align: center;
  font-size: 24px;
  margin-bottom: 30px;
}
.category-grid__item {
    border-radius: 10px;
    position: relative;
    background-size: cover;
    color: white;
    text-decoration: none;
    overflow: hidden;
    background-repeat: no-repeat;
    background-position: bottom;

}
.category-first {
    display: flex;
    justify-content: space-between;
}

@media screen and (max-width: 768px) {
    .category-first {
        flex-direction: column;
    }
    .category-first-row {
        margin-right: 0;
        margin-bottom: 10px;
    }
}

.category-first-row {
    width: 100%; 
    display: flex; 
    gap: 10px;
    margin-right: 10px;
}

.category-first-column {
    width: 100%; 
    display: grid; 
    gap: 10px;
}

.category-second {
    display: flex; 
    gap: 10px; 
    margin-top: 10px;
}

.category-grid__title {
  position: absolute;
  left: 16px;
  bottom: 16px;
  font-size: 16px;
  font-weight: 500;
}
.category-grid__icon {
    position: absolute;
    top: 16px;
    right: 16px;
    font-size: 18px;
}   

/* You can add custom styling here for specific items */
.item-1,
.item-2 {
    width: 100%;
    height: 410px;
}
.item-4,
.item-3 {
    height: 200px;
}

.item-5,
.item-6,
.item-7 {
    width: 50%;
    height: 200px;
}
.item-7 {
    color: black;
}

</style>
